# Environment Configuration Template
# Copy to .env and fill in actual values
# WARNING: .env contains secrets - DO NOT commit to version control

# ============================================================================
# COMMON - Required for both dev and prod
# ============================================================================

# Environment mode: 'dev' or 'prod'
# Determines database file and which commands are allowed
ENV=prod

# Server port (default: 8000)
# For local dev: 8000
# For production behind router: 8000 (forward external 80/443 to internal 8000)
PORT=8000

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# Use DEBUG for beta/pre-production to see all actions
# Use WARNING for production to reduce noise
LOG_LEVEL=INFO

# Telegram Bot configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_NAME=SG_SOSenki_Bot
TELEGRAM_MINI_APP_ID=sosenki-mini-app-id

# Database (prod uses sosenki.db)
DATABASE_URL=sqlite:///./sosenki.db

# External URLs shown in bot messages
PHOTO_GALLERY_URL=https://photos.example.com
STAKEHOLDER_SHARES_URL=https://docs.google.com/spreadsheets/d/xxx

# AI/LLM (Ollama)
OLLAMA_MODEL=qwen2.5:latest
OLLAMA_HOST=http://localhost:11434

# ============================================================================
# PRODUCTION - Required only for ENV=prod
# ============================================================================

# Your domain (e.g., DuckDNS subdomain)
# Used by 'make install' to generate:
#   WEBHOOK_URL = https://{DOMAIN}/webhook/telegram
#   MINI_APP_URL = https://{DOMAIN}/mini-app/
DOMAIN=yourname.duckdns.org

# ============================================================================
# DEVELOPMENT - Required only for ENV=dev
# ============================================================================

# Database (dev uses sosenki.dev.db, safe to reset anytime)
# DATABASE_URL=sqlite:///./sosenki.dev.db

# Google Sheets seeding (dev only - prod data comes from backups)
GOOGLE_CREDENTIALS_PATH=.env_google_credentials.json
GOOGLE_SHEET_ID=your_google_sheet_id_here
SEEDING_CONFIG_PATH=seeding/config/seeding.json

# Dynamic URLs (set automatically by setup-environment.sh via ngrok)
# WEBHOOK_URL=set dynamically
# MINI_APP_URL=set dynamically
