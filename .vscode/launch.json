{
  "_comment": "Environment loaded: static from .env in main.py, dynamic from /tmp/.sosenki-env via preLaunchTask setup-environment.sh",
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: serve (Bot + Mini App with ngrok)",
      "type": "debugpy",
      "request": "launch",
      "module": "src.main",
      "console": "integratedTerminal",
      "justMyCode": true,
      "stopOnEntry": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": ["--mode", "webhook"],
      "presentation": {
        "hidden": false,
        "group": "Python",
        "order": 1
      },
      "preLaunchTask": "serve-setup-ngrok-and-launch"
    },
    {
      "name": "Python: seed (Database seeding from Google Sheets)",
      "type": "debugpy",
      "request": "launch",
      "module": "src.cli.seed",
      "console": "integratedTerminal",
      "justMyCode": true,
      "stopOnEntry": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "DATABASE_URL": "sqlite:///./sosenki.db",
        "GOOGLE_CREDENTIALS_PATH": ".env_google_credentials.json"
      },
      "presentation": {
        "hidden": false,
        "group": "Python",
        "order": 2
      }
    }
  ],
  "compounds": []
}
